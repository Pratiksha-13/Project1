<html>
<head>
	<style>
		
body{
   background-image:url("/assets/bg3.jpg");
   background-repeat: no-repeat;
   background-size: cover;
   	
}
</style>
</head>
<body>
<%=link_to "Back to list" , controller: "book", action: 'list', class: "back-link" %>

<div class ="Book Edit">
	<h2> Edit Book Records</h2>

	<%= form_for(:books, url: {controller: "book", action: 'update',id: @book.id}) do |t| %>

	<table summary="Topics form fields">

		<tr>
			<th>  Book Name</th>
			<td> <%= t.text_field(:name) %></td>
		</tr>
		<tr>
			<th> Price</th>
			<td> <%= t.text_field(:price) %></td>
		</tr>


		<tr>
			<th> Author</th>
			<td> <%= t.text_field(:author) %></td>
		</tr>


	</table>
	<div class = "form-button">
	     <%= submit_tag("Update Book")%>
	 </div>
	 <% end %>
</div>	 
</body>
</html>